<h2>Rating statistics</h2>
<p> Total of <%= pluralize(@ratings.count, 'rating') %> given</p>


<div class="container-fluid">
<div class="row">
  <div class="col-md-6">
    <h3>Best breweries</h3>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Average</th>
      </tr>
      </thead>

      <tbody>
      <% @top_breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %></td>
            <td><%= brewery.average_rating %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>



  <div class="col-md-6">
    <h3>Best beers</h3>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Average</th>
      </tr>
      </thead>

      <tbody>
      <% @top_beers.each do |beer| %>
          <tr>
            <td><%= link_to beer.name, beer %></td>
            <td><%= beer.average_rating %></td>
            <td></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
 </div>





</div>




<% if current_user.nil? %>
<% else %>
    <%= link_to 'new rating', new_rating_path, class:"btn btn-primary" %>
<% end %>